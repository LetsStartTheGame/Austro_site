<div class="container-bg">
<div data-section-id="{{ section.id }}"  data-section-type="newsletter-block news-block-4" class="newsletter-block news-block-4 " style="{% if section.settings.image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-position:center;{% else %}background-color:{{section.settings.news_bg_clr}}{% endif%};">  
  <div class="newsletter-block-type-4 ">
    <div class="overlay"></div>
    <div class="container">

      <div class="news-inner-block">
        {% if section.settings.title != blank %}
        <h4 class="newslet_title " style="color:{{ section.settings.title_color }};">
          <i class="far fa-envelope-open"></i>{{ section.settings.title }}
        </h4>
        {% endif %}       
        <div class="mc-embedded-subscribe-form wow fadeInUp animated">       
          {% form 'customer' %}
          {% if form.posted_successfully? %}
          <p class="note form-success">{{ 'general.newsletter_form.mailing_list_success_message' | t }}</p>
          {% else %}

          <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" class="mail" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" >
          <input type="hidden" name="contact[tags]" value="newsletter">
          <button type="submit" class="btn subscribe" name="subscribe" value="" >{{ section.settings.button }}</button>          

          {% endif %}
          {{ form.errors | default_errors }}
          {% endform %}  

        </div>     
      </div>
    </div>
  </div>
  <style>
    .newsletter-block-type-4 form input[type="email"]{color:{{section.settings.input_txt_color}};background-color:{{ section.settings.input_bg_color}};}
    .newsletter-block-type-4 form input[type="email"]:focus{background-color:{{ section.settings.input_bg_color}} }
    .newsletter-block-type-4 form input[type="email"]::-webkit-input-placeholder {color:{{section.settings.input_txt_color}};}  
    .newsletter-block-type-4 form input[type="email"]::-moz-placeholder { color:{{section.settings.input_txt_color}};}
    .newsletter-block-type-4 form input[type="email"]:-ms-input-placeholder {color:{{section.settings.input_txt_color}};}
    .newsletter-block-type-4 form input[type="email"]:-moz-placeholder { color:{{section.settings.input_txt_color}};}

    {% if section.settings.show_overlay_bg != blank %}
    .newsletter-block.news-block-4::before{background:{{section.settings.news_bg_clr}};}
    {% endif %}
    .newsletter-block-type-4 form .btn{color:{{section.settings.btn_txt_color}}; background:{{section.settings.btn_bg_color}};}
    .newsletter-block-type-4 form .btn:hover {color:{{section.settings.btn_hover_color}}; background:{{section.settings.btn_hover_bg_color}};}


    .newsletter-block-type-4 .inline-list li a {border:1px solid {{section.settings.social_icon_borderclr}};}
    .newsletter-block-type-4 .inline-list li a:hover{border:1px solid {{section.settings.social_icon_hoverbg_clr}};background:{{section.settings.social_icon_hoverbg_clr}};color:{{section.settings.social_icon_hover_clr}};}


  </style>
</div>
</div>

{% schema %}
{
"name": "Newsletter",
"class": "index-section",  
"settings": [
{
"type": "image_picker",
"id": "image_1",
"label": "Image",
"info": "Size: 1920x1200"
},
{
"type": "checkbox",
"id": "show_overlay_bg",
"label":"Show Overlay bg Color"

},
{
"type": "color",
"id": "news_bg_clr",
"label": "Bg Color",
"default": "#fff"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Newsletter"
},
{
"type": "color",
"id": "title_color",
"label": "Heading",
"default": "#000"
},
{
"type": "color",
"id": "news_border_clr",
"label": "Border Color",
"default": "#fff"
},

{
"type": "color",
"id": "input_bg_color",
"label": "Input Bg color",
"default": "#fff"
},
{
"type": "color",
"id": "input_txt_color",
"label": "Input Text color",
"default": "#000"
},
{
"type": "text",
"id": "button",
"label": "Button",
"default": "Subscribe"
},
{
"type": "color",
"id": "btn_txt_color",
"label": "Button Text color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_bg_color",
"label": "Button Bg color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_hover_bg_color",
"label": "Button Hover Bg color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_hover_color",
"label": "Button Hover Text color",
"default": "#fff"
}
]  
}
{% endschema %}