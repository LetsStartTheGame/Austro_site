
<div data-section-id="{{ section.id }}"  data-section-type="img-carousel-type" class="img-carousel-type">
  
  <div class="container">
    <div class="grid__item about-us-section-1">
     
      <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole small-grid__item " >
        <div class="left-img">
           {% if section.settings.left_img != blank %} 
          <img src="{{  section.settings.left_img | img_url: "778X" }}" alt="{{ section.settings.img_title }}" />
          
          {% else %}
        <img src="//via.placeholder.com/768x778">
          
          {% endif %} 
        </div>
      </div>
      
      <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole small-grid__item img-section" style=" {% if section.settings.show_image_1 != blank %} background-image:url('{{ section.settings.image | img_url: '1920X' }}');background-repeat: no-repeat;background-position: 0 65%; {% else %}background-color:{{section.settings.background_color}} {% endif%}">
        <div class="img-content">
          {% if section.settings.title_1 != blank %} 
           <div class="section-header section-header--small">
        <div class="border-title">
          <h2 style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h2>
             </div>
          </div>
          {% endif %} 
          {% if section.settings.desc != blank %} 
          <p style="color:{{ section.settings.desc_clr }};">{{ section.settings.desc }}</p>
          <div class="dt-sc-hr-invisible-very-small"></div>
          {% endif %} 
          {% if section.settings.subdesc != blank %} 
          <p style="color:{{ section.settings.subdesc_clr }};">{{ section.settings.subdesc }}</p>
          {% endif %} 
        </div>
        
      </div>
    </div>
  </div>
 
</div>











<style>


  


  .img-carousel-type .img-content h3::before{background:{{section.settings.title_1_border}};}

</style>





{% schema %}
{
"name": "Introduction",
"class": "index-section",
"settings": [
 {
"type": "checkbox",
"id": "show_image_1",
"label": "Show Image"
},
  {
  "type": "image_picker",
  "id": "image",
  "label": "Image",
  "info": "Size: 1920x1280"
  },
{
"type": "color",
"id": "background_color",
"label": "Bg Color",
"default": "#000"
},

{
"type": "image_picker",
"id": "left_img",
"label": "left Image",
"info": "Size: 768x778"
},
{
"type": "text",
"id": "img_title",
"label": "Img Alt"
},
{
"type": "image_picker",
"id": "abot_bg_img",
"label": "About Bg Image",
"info": "Size: 1920x1000"
},
{
"type": "text",
"id": "title_1",
"label": "Title"
},
{
"type": "color",
"id": "title_1_clr",
"label": "Title Color",
"default": "#000"
},
{
"type": "color",
"id": "title_1_border",
"label": "Title Border Color",
"default": "#000"
},
{
"type": "textarea",
"id": "desc",
"label": "Desc"
},
{
"type": "color",
"id": "desc_clr",
"label": "Desc Color",
"default": "#000"
},
{
"type": "textarea",
"id": "subdesc",
"label": "Desc"
},
{
"type": "color",
"id": "subdesc_clr",
"label": "Sub Desc Color",
"default": "#000"
}
]
}
{% endschema %}



