        .grid-banner-type-3-b .featured-content .btn.two:hover { color:{{ section.settings.hover_button_2_txt}} !important;border-color:{{ section.settings.hover_button_2_bg}} !important; }
        .grid-banner-type-3-b .featured-content .btn.one:hover { color:{{ section.settings.hover_button_1_txt}} !important;background:{{ section.settings.hover_button_1_bg}} !important; }
        {% if section.settings.overlay1 %}  .grid-banner-type-3-b .ovrly31.overlay_1 .ovrly { background:{{ section.settings.overlay_1 | color_modify: 'alpha', 0.7 }};  }{% endif %}  
        {% if section.settings.overlay2 %}  .grid-banner-type-3-b .ovrly31.overlay_2 .ovrly { background:{{ section.settings.overlay_2 | color_modify: 'alpha', 0.7 }};  }{% endif %}  
        {% if section.settings.overlay3 %} .grid-banner-type-3-b .ovrly31.overlay_3 .ovrly { background:{{ section.settings.overlay_3 | color_modify: 'alpha', 0.7 }};  }{% endif %}  
        {% if section.settings.overlay4 %} .grid-banner-type-3-b .ovrly31.overlay_4 .ovrly { background:{{ section.settings.overlay_4 | color_modify: 'alpha', 0.7 }};  }{% endif %}  
    	.grid-banner-type-3-b .ovrly31.overlay_1 .featured-content h5 span{background:{{section.settings.text_1_bgclr }};} 
        .grid-banner-type-3-b .ovrly31.overlay_2 .featured-content h5 span{background:{{section.settings.coupon_1_bg }};}
        .grid-banner-type-3-b .ovrly31.overlay_3 .featured-content h5 span{background:{{ section.settings.coupon_2_bg}};}
        @media only screen and (max-width: 567px){
        .grid-banner-type-3-b .ovrly31.overlay_2 .featured-content{background:{{ section.settings.content_2_bg | color_modify: 'alpha', 0.4}};}
        .grid-banner-type-3-b .ovrly31.overlay_3 .featured-content{background:{{ section.settings.content_3_bg | color_modify: 'alpha', 0.4 }};}
        .grid-banner-type-3-b .ovrly31.overlay_4 .featured-content{width:80%;margin:0 auto;background:{{ section.settings.content_4_bg| color_modify: 'alpha', 0.5 }};}}
        @media only screen and ( min-width:768px) and (max-width: 967px){
        .grid-banner-type-3-b .ovrly31.overlay_2 .featured-content{padding:5px;background:{{ section.settings.content_2_bg | color_modify: 'alpha', 0.4}};}
        .grid-banner-type-3-b .ovrly31.overlay_3 .featured-content{padding:5px;background:{{ section.settings.content_3_bg | color_modify: 'alpha', 0.4 }};}
        .grid-banner-type-3-b .ovrly31.overlay_4 .featured-content{padding:5px;width:80%;margin:0 auto;background:{{ section.settings.content_4_bg| color_modify: 'alpha', 0.5 }};}}
        
        
    </style>
