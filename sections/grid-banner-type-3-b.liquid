<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-3-b" class="grid-banner-type-3-b">   
 <div class="container-bg">
  <div class="grid-uniform featuredItems">  

      <div class="grid__item wide--one-quarter post-large--one-quarter large--one-quarter medium--one-quarter small--grid__item">
        <div class="ovrly31 overlay_1">
          {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
          {% if section.settings.image_1 != blank %}
          <img src="{{ section.settings.image_1 | img_url: '1920X' }}" alt="{{ section.settings.title_1 }}" />
          <div class="ovrly"></div>
          {% else %}
          <img src="//via.placeholder.com/570x970">
          {% endif%}           
          {% if section.settings.link_1 != blank %}  </a>

          {% endif%}
          <div class="featured-content">       
            {% if section.settings.title_1 != blank %}
            <h1 style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h1>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <h5 style="color:{{ section.settings.text_1_clr }} "><span>{{ section.settings.text_1}}</span></h5>    
            {% endif %}  
            {% if section.settings.button_1 != blank %}
            <a class="btn one" href="{{ section.settings.link_1 }}" style="color:{{ section.settings.button_1_txt}};background:{{ section.settings.button_1_bg}};">{{ section.settings.button_1}}</a>    
            {% endif %}         
          </div>   
        </div>        
      </div>
      <div class="grid__item wide--three-quarters post-large--three-quarters large--one-half medium--one-half small--grid__item  center-section">
        <div class="grid__item wide--one-half post-large--one-half large--one-half medium--one-half small--grid__item grid-banner-left"> 
          <div class="ovrly31 overlay_2">
            {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
            {% if section.settings.image_2 != blank %}
            <img src="{{ section.settings.image_2 | img_url: '1920X' }}" alt="{{ section.settings.title_2 }}" />
            <div class="ovrly"></div>
            {% else %}

            <img src="//via.placeholder.com/590x376">
            {% endif%}           
            {% if section.settings.link_2 != blank %}  </a>

            {% endif%}
            <div class="featured-content">       
              {% if section.settings.title_2 != blank %}
              <h5 style="color:{{ section.settings.title_2_clr }};">{{ section.settings.title_2 }}</h5>
              {% endif %}
              {% if section.settings.text_2 != blank %}
