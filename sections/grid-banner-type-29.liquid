<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-29" class="grid-banner-type-29">     
 <div class="container-bg">
  <div class="grid__item">  
    <div class="grid__item wow fadeInLeft wide--one-half post-large--one-half large--one-half medium--one-half small--grid__item small--text-center">
      <div class="ovrly31 overlay_1">
        {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
        {% if section.settings.image_1 != blank %}
        <img src="{{ section.settings.image_1 | img_url: '850x' }}" alt="{{ section.settings.title_1 }}" />
        <div class="ovrly"></div>
        {% else %}
        <img src="//via.placeholder.com/850x400">
        {% endif%}           
        {% if section.settings.link_1 != blank %}  </a>

        {% endif%}
        <div class="featured-content right">    
          
          
          {% if section.settings.text_1 != blank %}
          
          <h1  style="color:{{ section.settings.text_1_clr }};">{{ section.settings.text_1}}</h1>    
         
            {% endif %}
          {% if section.settings.sub_title_1 != blank %}
          <h6 style="color:{{ section.settings.sub_title_1_clr }}; background:{{section.settings.sub_title_1_bgclr }};">{{ section.settings.sub_title_1 }}</h6>
          {% endif %}
          
          {% if section.settings.etc_text_1 != blank %}
          <h3 style="color:{{ section.settings.etc_text_1_clr }};">{{ section.settings.etc_text_1}}</h3>    
            {% endif %}
          
          
          {% if section.settings.button_1 != blank %}
          <a class="btn one" href="{{ section.settings.link_1 }}">{{ section.settings.button_1}}</a>    
          {% endif %}         
        </div>   
      </div>


    </div>   
    <div class="grid__item wow fadeInRight wide--one-half post-large--one-half large--one-half medium--one-half small--grid__item small--text-center">

      <div class="ovrly31 overlay_2">
        {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
        {% if section.settings.image_2 != blank %}
        <img src="{{ section.settings.image_2 | img_url: '850x' }}" alt="{{ section.settings.title_2 }}" />
        <div class="ovrly"></div>
        {% else %}

       <img src="//via.placeholder.com/850x400">
        {% endif%}           
        {% if section.settings.link_2 != blank %}  </a>

        {% endif%}
        <div class="featured-content">       
			
          
          
          {% if section.settings.title_2 != blank %}
          <h1 style="color:{{ section.settings.title_2_clr }};">{{ section.settings.title_2 }}</h1>
          {% endif %}
          {% if section.settings.etc_text_2 != blank %}
          <h6 style="color:{{ section.settings.etc_text_2_clr }}; background:{{section.settings.etc_text_2_bgclr }};">{{ section.settings.etc_text_2}}</h6>    
          {% endif %}
          {% if section.settings.sub_title_2!= blank %}
          <h3 style=" color:{{ section.settings.sub_title_2_clr }};">{{ section.settings.sub_title_2}}</h3>    
          {% endif %}
          
          {% if section.settings.button_2 != blank %}
          <a class="btn two" href="{{ section.settings.link_2 }}">{{ section.settings.button_2}}</a>    
          {% endif %}         
        </div> 
      </div>
    </div>  
  </div> 
  </div> 
</div>     

<style>

  {% if section.settings.overlay_1_use %}.grid-banner-type-29 .ovrly31.overlay_1 .ovrly { background:{{ section.settings.overlay_1 | color_modify: 'alpha', 0.7 }};  }{% endif %} 
  {% if section.settings.overlay_2_use %}.grid-banner-type-29 .ovrly31.overlay_2 .ovrly { background:{{ section.settings.overlay_2 | color_modify: 'alpha', 0.7 }};  }{% endif %} 
  {% if section.settings.etc_text_1_borderclr != blank %}  .grid-banner-type-29 .featured-content .title-bg-1 h3:after,.grid-banner-type-29 .featured-content .title-bg-2 h3:after { box-shadow: 5px 5px 0 0px {{ section.settings.etc_text_1_borderclr | color_modify: "alpha" ,0.08 }}; } {% endif %}
  /*{% if section.settings.text_2_borderclr != blank %} .grid-banner-type-29 .overlay_2 .featured-content h3.title_bg_3 { box-shadow: 5px 5px 0 0px {{ section.settings.text_2_borderclr | color_modify: "alpha" ,0.08 }}; } {% endif %}*/
  
  .grid-banner-type-29 .featured-content h3 span{color:{{section.settings.span_clr}} }
  .grid-banner-type-29 .featured-content a{ background:{{section.settings.button_bg_clr }};color:{{section.settings.button_txt_clr}};}
  .grid-banner-type-29 .featured-content a:hover{ background:{{section.settings.button_hvrclr}};color:{{section.settings.button_txt_hvrclr}};}

</style>

